@model Tea


<div class="col-sm-4 col-md-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("C")</h3>
            <h3>TOS</h3>
            <h3>
                <a asp-controller="Tea" asp-action="Details" asp-route-id="@Model.TeaId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>

        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-teaId="@Model.TeaId">Add to cart</a>
            </p>
        </div>
    </div>
</div>